<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">



    <changeSet id="someId" author="ruslan">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="integer">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <addColumn tableName="users">
            <column name="is_moderator" type="boolean"/>        
            <column name="reg_time" type="date"/>
            <column name="name" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>        
            <column name="code" type="varchar(255)"/> 
            <column name="photo" type="text"/>
        </addColumn>
        

        <createTable tableName="post_votes">
            <column autoIncrement="true" name="id" type="integer"/>
        </createTable>

        <addColumn tableName="post_votes">
            <column name="user_id" type="integer">
                <constraints foreignKeyName="FK_post_votes_user"/>
            </column>
            <column name="post_id" type="integer">
                <constraints foreignKeyName="FK_post_votes_posts"/>
            </column>
            <column name="time" type="date"/>
            <column name="value" type="boolean"/>
        </addColumn>


        <createTable tableName="posts">
            <column autoIncrement="true" name="id" type="integer">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <addColumn tableName="posts">
            <column name="is_active" type="boolean"/>
            <column name="moderation_status" type="enum"/>
            <column name="moderator_id" type="integer"/>
            <column name="user_id" type="integer">
                <constraints foreignKeyName="FK_posts_user"/>
            </column>
            <column name="time" type="date"/>
            <column name="text" type="text"/>
            <column name="view_count" type="integer"/>
        </addColumn>

        <createTable tableName="tags">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="name" type="varchar(255)"/>
        </createTable>
        
        <createTable tableName="tag2post">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="post_id" type="integer">
                <constraints foreignKeyName="FK_tag2post_posts"/>
            </column>
            <column name="tag_id" type="integer">
                <constraints foreignKeyName="FK_tag2post_tags"/>
            </column>
        </createTable>
        
        <createTable tableName="post_comments">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="parent_id" type="integer"/>
            <column name="post_id" type="integer">
                <constraints foreignKeyName="FK_post_comments_posts"/>
            </column>
            <column name="user_id" type="integer">
                <constraints foreignKeyName="FK_post_comments_users"/>
            </column>
            <column name="time" type="date"/>
            <column name="text" type="text"/>
        </createTable>
        
        <createTable tableName="captcha_codes">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="time" type="date"/>
            <column name="code" type="boolean"/>
            <column name="secret_code" type="boolean"/>
        </createTable>
        
        <createTable tableName="global_settings">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="code" type="varchar(255)"/>
            <column name="value" type="varchar(255)"/>
        </createTable>

    </changeSet>
</databaseChangeLog>