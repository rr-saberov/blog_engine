<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">



    <changeSet id="someId" author="ruslan">
        <sql>CREATE TYPE mod_status AS ENUM ('NEW', 'ACCEPTED', 'DECLINED')</sql>
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="integer">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <addColumn tableName="users">
            <column name="is_moderator" type="boolean"/>
            <column name="reg_time" type="date"/>
            <column name="name" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="code" type="varchar(255)"/>
            <column name="photo" type="text"/>
        </addColumn>

        <insert tableName="users">
            <column name="id" value="1"/>
            <column name="is_moderator" value="true"/>
            <column name="name" value="Denis"/>
            <column name="email" value="denis@gmail.com"/>
            <column name="password" value="12345"/>
            <column name="code" value="556677"/>
            <column name="photo" value="https://yandex.ru/photoDenisa"/>
        </insert>


        <createTable tableName="post_votes">
            <column autoIncrement="true" name="id" type="integer"/>
        </createTable>

        <addColumn tableName="post_votes">
            <column name="user_id" type="integer">
                <constraints foreignKeyName="FK_post_votes_user"/>
            </column>
            <column name="post_id" type="integer">
                <constraints foreignKeyName="FK_post_votes_posts"/>
            </column>
            <column name="time" type="date"/>
            <column name="value" type="boolean"/>
        </addColumn>

        <insert tableName="post_votes">
            <column name="id" value="1"/>
            <column name="value" value="true"/>
        </insert>


        <createTable tableName="posts">
            <column autoIncrement="true" name="id" type="integer">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <addColumn tableName="posts">
            <column name="is_active" type="boolean"/>

            <column name="moderation_status" type="mod_status"/>
            <column name="moderator_id" type="integer"/>
            <column name="user_id" type="integer">
                <constraints foreignKeyName="FK_posts_user"/>
            </column>
            <column name="time" type="date"/>
            <column name="text" type="text"/>
            <column name="view_count" type="integer"/>
        </addColumn>

        <insert tableName="posts">
            <column name="id" value="1"/>
            <column name="is_active" value="true"/>
            <column name="text" value="test_text"/>
            <column name="view_count" value="55"/>
        </insert>

        <createTable tableName="tags">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="name" type="varchar(255)"/>
        </createTable>

        <createTable tableName="tag2post">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="post_id" type="integer">
                <constraints foreignKeyName="FK_tag2post_posts"/>
            </column>
            <column name="tag_id" type="integer">
                <constraints foreignKeyName="FK_tag2post_tags"/>
            </column>
        </createTable>

        <insert tableName="tags">
            <column name="id" value="1"/>
            <column name="name" value="tag name"/>
        </insert>

        <createTable tableName="post_comments">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="parent_id" type="integer"/>
            <column name="post_id" type="integer">
                <constraints foreignKeyName="FK_post_comments_posts"/>
            </column>
            <column name="user_id" type="integer">
                <constraints foreignKeyName="FK_post_comments_users"/>
            </column>
            <column name="time" type="date"/>
            <column name="text" type="text"/>
        </createTable>

        <insert tableName="post_comments">
            <column name="id" value="1"/>
            <column name="text" value="text"/>
        </insert>

        <createTable tableName="captcha_codes">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="time" type="date"/>
            <column name="code" type="boolean"/>
            <column name="secret_code" type="boolean"/>
        </createTable>

        <insert tableName="captcha_codes">
            <column name="id" value="1"/>
            <column name="code" value="true"/>
            <column name="secret_code" value="true"/>
        </insert>

        <createTable tableName="global_settings">
            <column autoIncrement="true" name="id" type="integer"/>
            <column name="code" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="value" type="varchar(255)"/>
        </createTable>

        <insert tableName="global_settings">
            <column name="id" value="1"/>
            <column name="code" value="MULTIUSER_MODE"/>
            <column name="name" value="Многопользовательский режим"/>
            <column name="value" value="YES"/>
        </insert>

        <insert tableName="global_settings">
            <column name="id" value="2"/>
            <column name="code" value="POST_MODERATION"/>
            <column name="name" value="Премодерация постов"/>
            <column name="value" value="YES"/>
        </insert>

        <insert tableName="global_settings">
            <column name="id" value="3"/>
            <column name="code" value="STATISTICS_IS_PUBLIC"/>
            <column name="name" value="Показывать всем статистику блога"/>
            <column name="value" value="NO"/>
        </insert>

    </changeSet>
</databaseChangeLog>